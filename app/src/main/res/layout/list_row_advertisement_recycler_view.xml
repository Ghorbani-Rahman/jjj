<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:foreground="?android:attr/selectableItemBackground"
    android:textDirection="rtl"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="100dp">

                <TextView
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:maxLength="40"
                    android:text=" کارخانه بهترین کارخانه ایران"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_advertisement"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="start"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:gravity="start|center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/type_advertisment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/cost_advertisment"
                        android:background="@drawable/background_point"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:text="100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="100dp">

                    <com.delaroystodios.metakar.ui.BannerImageView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent"
                        android:id="@+id/imgAdvertisement"/>

                    <ProgressBar
                        android:layout_gravity="center"
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/splashImage"
                        android:layout_centerHorizontal="true" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@android:color/black"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content">


                <ImageView
                    android:paddingLeft="3dp"
                    android:src="@drawable/ic_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/total_visits_count"
                    android:textColor="@android:color/white"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="@android:color/black"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/total_user_visit_count"
                    android:textColor="@android:color/white"
                    android:text="1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="@android:color/black"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingLeft="3dp"
                    android:src="@drawable/ic_access_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/durationVisit"
                    android:paddingLeft="3dp"
                    android:textColor="@android:color/white"
                    android:text="3 ذقیقه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/remaning_visit"
                    android:paddingLeft="3dp"
                    android:textColor="@android:color/white"
                    android:text="589"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:paddingLeft="3dp"
                    android:src="@drawable/ic_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
