<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@drawable/register_background"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_step_two_add_advertisement_visit_site"
                android:layout_marginLeft="12dp"
                android:src="@drawable/back_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="درج آگهی مرحله دوم"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="مرحله اول \n تعیین اطلاعات"
                        android:paddingRight="20dp"
                        android:textSize="14sp"
                        android:paddingTop="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingBottom="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        />

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="مرحله دوم \n تکمیل اطلاعات"
                        android:paddingRight="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:text="مرحله سوم \n تعیین بوجه"
                        android:paddingRight="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="دسته بندی"
                        android:textSize="16sp"
                        android:paddingTop="14dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:id="@+id/one_category"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/category_subcategory_one"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="دسته بندی  -  زیر دسته بندی"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_one_category"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/two_category"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/category_subcategory_two"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="دسته بندی  -  زیر دسته بندی"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_two_category"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/three_category"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/category_subcategory_three"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="دسته بندی  -  زیر دسته بندی"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_three_category"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/four_category"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/category_subcategory_four"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="ذسته بندی  -  زیر دسته بندی"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_four_category"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/five_category"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/category_subcategory_five"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="دسته بندی  -  زیر دسته بندی"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_five_category"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_add_advertisement"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textSize="14sp"
                                android:text="انتخاب دسته بندی"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <Spinner
                                android:layout_marginRight="60dp"
                                android:gravity="left"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:id="@+id/category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textSize="14sp"
                                android:text="انتخاب زیر دسته"
                                android:layout_marginLeft="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <Spinner
                                android:gravity="left"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:layout_marginRight="40dp"
                                android:id="@+id/sub_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="انتخاب محدوده فعالیت"
                        android:textSize="14sp"
                        android:paddingTop="15dp"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        />

                    <LinearLayout
                        android:id="@+id/one"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pro_city_one"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="استان  -  شهر"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_one"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/two"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pro_citiy_two"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="استان  -  شهر"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_two"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/three"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/pro_citiy_three"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="استان  -  شهر"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_three"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/four"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/pro_citiy_four"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="استان  -  شهر"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_four"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/five"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/pro_citiy_five"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginRight="30dp"
                            android:hint="استان  -  شهر"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/remove_five"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/background_add_advertisement"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:padding="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:textSize="14sp"
                                android:text="انتخاب استان"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <Spinner
                                android:id="@+id/provinces"
                                android:layout_marginRight="60dp"
                                android:gravity="left"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginEnd="10dp"
                            android:padding="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textStyle="bold"
                                android:paddingBottom="10dp"
                                android:textSize="14sp"
                                android:text="انتخاب شهر"
                                android:layout_marginLeft="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <Spinner
                                android:id="@+id/cities"
                                android:gravity="left"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:layout_marginRight="40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:text="شما پنج انتخاب دارید!"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_type_advertisement"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="آدرس سایت"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:paddingTop="15dp"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:padding="10dp"
                        android:text="توجه آدرس  با //:http وارد شود"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/link_web_site_visit_advertisement"
                        android:maxLines="1"
                        android:inputType="text"
                        android:scrollHorizontally="true"
                        android:hint="http://www.example.com"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/background_add_advertisement"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="افزودن تصویر شاخص"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:paddingTop="15dp"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/add_index_photo_for_advertisement"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"
                        android:text="انتخاب"
                        android:background="@drawable/background_remove_add_advertisement" />


                    <ImageView
                        android:id="@+id/photo_index_selected"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />


                </LinearLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:padding="12dp"
                        android:id="@+id/step_prev_site"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/background_add_advertisement_cancle"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:text="  مرحله قبل  "
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/step_next_add"
                        android:padding="12dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/background_add_advertisement_cancle"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:text=" مرحله بعدی "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>




</LinearLayout>